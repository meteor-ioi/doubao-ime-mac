{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "doubao-voice-input",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../frontend",
    "devUrl": null
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Doubao Voice Input",
        "url": "index.html",
        "width": 48,
        "height": 36,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": true,
        "skipTaskbar": true,
        "resizable": false
      },
      {
        "label": "settings",
        "title": "偏好设置",
        "url": "settings.html",
        "width": 600,
        "height": 450,
        "decorations": true,
        "alwaysOnTop": false,
        "visible": false,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}